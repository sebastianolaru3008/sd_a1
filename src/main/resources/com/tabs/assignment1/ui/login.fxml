<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.tabs.assignment1.ui.LoginView">
    <Text layoutX="213.0" layoutY="72.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome">
        <font>
            <Font size="38.0"/>
        </font>
    </Text>
    <Button fx:id="loginBtn" layoutX="270.0" layoutY="254.0" mnemonicParsing="false"
            onAction="#login" text="Login"/>
    <Button fx:id="signupBtn" layoutX="263.0" layoutY="304.0" mnemonicParsing="false"
            onAction="#register"
            text="Sign Up"/>

    <TextField fx:id="usernameTextField" layoutX="216.0" layoutY="142.0" promptText="username"/>
    <PasswordField fx:id="passwordTextField" layoutX="215.0" layoutY="188.0" promptText="password"/>
    <Button fx:id="travelAgencyBtn" layoutX="243.0" layoutY="350.0" mnemonicParsing="false"
            onAction="#openTravelAgentScreen" text="Travel Agency?"/>
</AnchorPane>
